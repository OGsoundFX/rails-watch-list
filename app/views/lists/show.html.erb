<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.url %>);">
  <div class="container">
    <h1><%= @list.name%></h1>
  </div>
</div>
<div class="container">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <%= f.submit "Add movie" %>
  <% end %>
  <% if !@list.movies.empty? %>
    <ul>
      <% @list.movies.each do |movie| %>
        <%= movie.title %>
        <%= image_tag movie.poster_url, style: 'width: 200px'%>
      <% end %>
    </ul>
  <% end %>
</div>
